<Window x:Class="WpfApplication1.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="235" Width="280" Name="loginDialog">
    <Grid Height="197" Width="254">
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,46,0,0" Name="userNameBox" VerticalAlignment="Top" Width="224" />
        <Label Content="user name / email" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="username" VerticalAlignment="Top" />
        <Label Content="password" Height="28" HorizontalAlignment="Left" Margin="12,90,0,0" Name="password" VerticalAlignment="Top" />
        <PasswordBox Height="23" HorizontalAlignment="Left" Margin="12,124,0,0" Name="passwordBox1" VerticalAlignment="Top" Width="224" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="12,164,0,0" Name="cancel" VerticalAlignment="Top" Width="75" Click="cancel_Click" />
        <Button Content="Login" Height="23" HorizontalAlignment="Right" Margin="0,164,18,0" Name="submit" VerticalAlignment="Top" Width="75" IsDefault="True" Click="submit_Click" />
    </Grid>
</Window>
